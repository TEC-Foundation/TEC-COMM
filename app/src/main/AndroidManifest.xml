<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tec_hub.tecuniversalcomm">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tec_comm"
        android:label="@string/app_name"
        android:theme="@style/MyTheme">

        <activity
            android:name=".ActivityMain">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <activity
            android:name=".ActivityConnection"
            android:parentActivityName=".ActivityMain">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityMain"/>
        </activity>

        <activity
            android:name=".ActivityTerminal"
            android:parentActivityName=".ActivityMain">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityMain"/>
        </activity>

        <activity
            android:name=".ActivityCommand"
            android:parentActivityName=".ActivityMain">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityMain"/>
        </activity>

        <activity
            android:name=".ActivityControl"
            android:parentActivityName=".ActivityMain">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityMain"/>
        </activity>

        <activity
            android:name=".ActivitySettings"
            android:parentActivityName=".ActivityMain">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityMain"/>
        </activity>

        <activity
            android:name=".ActivityNewConnection"
            android:parentActivityName=".ActivityConnection">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityConnection"/>
        </activity>

        <service
            android:name=".data.connection.ConnectionService"
            android:label="Manage Bluetooth Connections"/>

    </application>
</manifest>
