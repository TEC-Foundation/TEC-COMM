<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tec_hub.tecuniversalcomm">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tec_comm"
        android:label="@string/app_name"
        android:theme="@style/MyTheme">

        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".KudosActivity"
            android:label="Launch Kudos Controls"
            android:screenOrientation="landscape"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.tec_hub.tecuniversalcomm.MainActivity"/>
        </activity>

        <service
            android:name=".data.connection.ConnectionService"
            android:label="Manage Bluetooth Connections"/>

    </application>
</manifest>
