<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDD">

    <ScrollView
        android:id="@+id/terminal_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/terminal_input_bar">

        <TextView
            android:id="@+id/terminal_window"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

    </ScrollView>

    <RelativeLayout
        android:id="@id/terminal_input_bar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#FFF">

        <EditText
            android:id="@+id/terminal_input_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/terminal_input_button"
            android:inputType="textCapSentences"/>

        <Button
            android:id="@id/terminal_input_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>