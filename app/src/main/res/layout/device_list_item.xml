<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <ImageButton android:id="@+id/device_image_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:contentDescription="Device Icon"
        android:focusable="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#777"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <RelativeLayout
        android:id="@+id/list_clickable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/device_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#777"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Bluetooth Device"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_below="@id/device_details"
            android:layout_alignParentLeft="true" />

        <ImageButton
            android:id="@+id/device_options"
            android:background="@drawable/ic_overflow_live"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</LinearLayout>