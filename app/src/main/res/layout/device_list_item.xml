<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <ImageButton android:id="@+id/list_bt_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:contentDescription="Bluetooth Icon"
        android:focusable="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <RelativeLayout
        android:id="@+id/list_clickable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@+id/bt_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="00:00:00:00:00:00:00"
            android:textColor="#333"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/bt_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Bluetooth Device"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_below="@id/bt_address"
            android:layout_alignParentLeft="true" />

        <ImageButton
            android:id="@+id/device_options"
            android:background="@drawable/ic_overflow_live"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</LinearLayout>